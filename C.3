  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE(); // Enable Clock for PA0 (Button) + PA9/10 (UART)

  /* Configure GPIO pin : PA0 (Switch/Button) */
  GPIO_InitStruct.Pin = GPIO_PIN_0;
