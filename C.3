/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "stm32f4xx_hal.h"
#include <string.h> // Needed for strlen

/* Global Handle for UART1 */
UART_HandleTypeDef huart1;

/* Function Prototypes */
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART1_UART_Init(void);
void Error_Handler(void);

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* 1. Reset of all peripherals */
  HAL_Init();

  /* 2. Configure the System Clock */
  SystemClock_Config();

  /* 3. Initialize peripherals (GPIO for Button, UART for PC) */
  MX_GPIO_Init();
  MX_USART1_UART_Init();

  /* Define messages */
  char *msg_hello = "Hello\r\n";
  char *msg_bye = "Bye\r\n";

  /* 4. Infinite loop */
  while (1)
  {
      /* Check the state of the Switch (PA0) 
       * The On-board button (PA0) is usually HIGH (1) when pressed 
       * and LOW (0) when released.
       */
      
      GPIO_PinState switchState = HAL_GPIO_ReadPin(GPIOA, GPIO_PIN_0);

      if (switchState == GPIO_PIN_RESET) // SW = 0 (Not Pressed)
      {
          /* Send "Hello" */
          HAL_UART_Transmit(&huart1, (uint8_t*)msg_hello, strlen(msg_hello), HAL_MAX_DELAY);
      }
      else // SW = 1 (Pressed)
      {
          /* Send "Bye" */
          HAL_UART_Transmit(&huart1, (uint8_t*)msg_bye, strlen(msg_bye), HAL_MAX_DELAY);
      }

      /* Delay to prevent flooding the screen */
      HAL_Delay(500);
  }
}

