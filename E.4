// Convert BCD (Binary Coded Decimal) to Decimal
// Example: RTC sends 0x12, we convert it to int 12.
uint8_t BCD2DEC(uint8_t bcd) {
    return ((bcd >> 4) * 10) + (bcd & 0x0F);
}

// Convert Decimal to BCD
// Example: We want to set 12, we convert it to 0x12.
uint8_t DEC2BCD(uint8_t dec) {
    return ((dec / 10) << 4) | (dec % 10);
}

// Function to read data from DS1307/DS3231
void Get_RTC_Time(void) {
    uint8_t data[3];
    // Read 3 bytes starting from register 0x00 (Seconds, Minutes, Hours)
    if (HAL_I2C_Mem_Read(&hi2c1, DS1307_ADDR, 0x00, 1, data, 3, 1000) == HAL_OK) {
        g_Sec = BCD2DEC(data[0] & 0x7F); // Mask CH bit
        g_Min = BCD2DEC(data[1]);
        g_Hour = BCD2DEC(data[2] & 0x3F); // Mask 12/24 mode bits
    }
}

// Function to write data to DS1307/DS3231
void Set_RTC_Time(uint8_t h, uint8_t m, uint8_t s) {
    uint8_t data[3];
    data[0] = DEC2BCD(s);
    data[1] = DEC2BCD(m);
    data[2] = DEC2BCD(h);
    HAL_I2C_Mem_Write(&hi2c1, DS1307_ADDR, 0x00, 1, data, 3, 1000);
}
