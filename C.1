/**
  * @brief USART1 Initialization Function
  * @param None
  * @retval None
  */
static void MX_USART1_UART_Init(void)
{
  /* Initialize the huart1 instance */
  huart1.Instance = USART1;
  huart1.Init.BaudRate = 115200;           // IMPORTANT: Match this in Terminal v1.9b
  huart1.Init.WordLength = UART_WORDLENGTH_8B; // 8 bits data [cite: 23]
  huart1.Init.StopBits = UART_STOPBITS_1;      // 1 stop bit [cite: 23]
  huart1.Init.Parity = UART_PARITY_NONE;       // No parity [cite: 23]
  huart1.Init.Mode = UART_MODE_TX_RX;          // Transmit and Receive mode
  huart1.Init.HwFlowCtl = UART_HWCONTROL_NONE; // No Handshaking 
  huart1.Init.OverSampling = UART_OVERSAMPLING_16;
  
  if (HAL_UART_Init(&huart1) != HAL_OK)
  {
    Error_Handler();
  }
}

