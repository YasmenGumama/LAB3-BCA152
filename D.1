/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* Configure the system clock */
  SystemClock_Config();

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_USART1_UART_Init();

  /* USER CODE BEGIN 2 */
  // Send a test message to confirm UART is working
  char startMsg[] = "Starting Loopback Test...\r\n";
  HAL_UART_Transmit(&huart1, (uint8_t*)startMsg, strlen(startMsg), 100);

  uint8_t tx_buffer; // Data to send
  uint8_t rx_buffer; // Data received back
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
      // Loop from 'A' to 'Z'
      for (char letter = 'A'; letter <= 'Z'; letter++) {

          tx_buffer = letter; // Load current letter

          // 1. Send 'A' out MOSI and simultaneously capture MISO into rx_buffer
          if (HAL_SPI_TransmitReceive(&hspi1, &tx_buffer, &rx_buffer, 1, 100) == HAL_OK) {

              // 2. Send the RECEIVED data to the PC via UART
              HAL_UART_Transmit(&huart1, &rx_buffer, 1, 100);
          }

          HAL_Delay(100); // Small delay to make it readable
      }

      // Newline after Z so the next alphabet starts on a new line
      uint8_t newline[] = "\r\n";
      HAL_UART_Transmit(&huart1, newline, 2, 100);

      HAL_Delay(1000); // Wait 1 second before restarting
  }
  /* USER CODE END WHILE */
}

