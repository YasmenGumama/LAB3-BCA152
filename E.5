/**
  * ACTIVITY E.5
  * Objective: 
  * 1. Receive time from PC via UART Interrupt (ISR).
  * 2. Buffer the data (Queue).
  * 3. Set the RTC time based on the received string.
  * 4. Keep Activity E.4 Logic (Lamp ON 19:00 - 08:00).
  */
/* USER CODE END Header */

/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include <stdio.h>
#include <string.h>
#include <stdlib.h>

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */
#define DS1307_ADDR (0x68 << 1) // RTC Address

// --- Activity 5: UART Buffer / Queue ---
#define RX_BUFFER_SIZE 11       // Length of 11 as requested
uint8_t rxByte;                 // Temporary holder for 1 incoming character
uint8_t rxBuffer[RX_BUFFER_SIZE]; // The Queue
uint8_t rxIndex = 0;            // Current position in the Queue
uint8_t processTimeFlag = 0;    // Flag to tell Main Loop "We have a new time!"

// --- Time Variables ---
uint8_t g_Hour, g_Min, g_Sec;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C1_Init(void);
static void MX_USART1_UART_Init(void);

/* USER CODE BEGIN PFP */
uint8_t BCD2DEC(uint8_t bcd);
uint8_t DEC2BCD(uint8_t dec);
void Get_RTC_Time(void);
void Set_RTC_Time(uint8_t h, uint8_t m, uint8_t s);
/* USER CODE END PFP */

int main(void)
{
  /* MCU Configuration */
  HAL_Init();
  SystemClock_Config();
  MX_GPIO_Init();
  MX_I2C1_Init();
  MX_USART1_UART_Init();

  /* USER CODE BEGIN 2 */
  // IMPORTANT: Enable the UART Interrupt (Listen for the first character)
  HAL_UART_Receive_IT(&huart1, &rxByte, 1);

  // Send instructions to PC
  char instructions[] = "Enter Time as HH:MM:SS (e.g., 18:59:55) and press ENTER.\r\n";
  HAL_UART_Transmit(&huart1, (uint8_t*)instructions, strlen(instructions), 100);
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  uint8_t prevMin = 99;

  while (1)
  {
      // 1. Check if user sent a new time (Activity 5 Logic)
      if (processTimeFlag == 1) 
      {
          // Parse the buffer: "19:00:00"
          // ASCII '0' is 48. We subtract '0' to get the integer value.
          uint8_t newH = (rxBuffer[0] - '0') * 10 + (rxBuffer[1] - '0');
          uint8_t newM = (rxBuffer[3] - '0') * 10 + (rxBuffer[4] - '0');
          uint8_t newS = (rxBuffer[6] - '0') * 10 + (rxBuffer[7] - '0');

          // Update the RTC
          Set_RTC_Time(newH, newM, newS);
          
          char confirm[] = "RTC UPDATED!\r\n";
          HAL_UART_Transmit(&huart1, (uint8_t*)confirm, strlen(confirm), 100);

          processTimeFlag = 0; // Reset flag
      }

      // 2. Normal Operation: Read Time
      Get_RTC_Time();

      // 3. Activity E.4 Logic: Lamp Control
      // Lamp ON if time is >= 19:00 OR < 08:00
      if (g_Hour >= 19 || g_Hour < 8) {
          HAL_GPIO_WritePin(GPIOD, GPIO_PIN_4, GPIO_PIN_SET); 
      } else {
          HAL_GPIO_WritePin(GPIOD, GPIO_PIN_4, GPIO_PIN_RESET);
      }

      // 4. Activity E.3 Logic: Print Time every minute
      if (g_Min != prevMin) {
          char msg[50];
          sprintf(msg, "Current Time: %02d:%02d:%02d\r\n", g_Hour, g_Min, g_Sec);
          HAL_UART_Transmit(&huart1, (uint8_t*)msg, strlen(msg), 100);
          prevMin = g_Min;
      }

      HAL_Delay(100);
  }
  /* USER CODE END WHILE */
}

/* USER CODE BEGIN 4 */
// --- UART INTERRUPT SERVICE ROUTINE (The "Queue" Logic) ---
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance == USART1)
  {
      // Check for Carriage Return (Enter Key) OR Line Feed
      if (rxByte == '\r' || rxByte == '\n') 
      {
          processTimeFlag = 1; // Trigger Main Loop to process data
          rxIndex = 0;         // Reset Queue index
      }
      else 
      {
          // Add character to Queue if there is space
          if (rxIndex < RX_BUFFER_SIZE) {
              rxBuffer[rxIndex] = rxByte;
              rxIndex++;
          }
          
          // Activity 5 Requirement: If we received 10 bytes, process it automatically
          // (Format HH:MM:SS is 8 chars, so 10 is a safe limit)
          if (rxIndex >= 10) {
              processTimeFlag = 1;
              rxIndex = 0;
          }
      }

      // CRITICAL: Re-arm the interrupt to listen for the NEXT character
      HAL_UART_Receive_IT(&huart1, &rxByte, 1);
  }
}

// --- RTC HELPER FUNCTIONS ---
uint8_t BCD2DEC(uint8_t bcd) { return ((bcd >> 4) * 10) + (bcd & 0x0F); }
uint8_t DEC2BCD(uint8_t dec) { return ((dec / 10) << 4) | (dec % 10); }

void Get_RTC_Time(void) {
    uint8_t data[3];
    HAL_I2C_Mem_Read(&hi2c1, DS1307_ADDR, 0x00, 1, data, 3, 1000);
    g_Sec = BCD2DEC(data[0] & 0x7F);
    g_Min = BCD2DEC(data[1]);
    g_Hour = BCD2DEC(data[2] & 0x3F);
}

void Set_RTC_Time(uint8_t h, uint8_t m, uint8_t s) {
    uint8_t data[3];
    data[0] = DEC2BCD(s);
    data[1] = DEC2BCD(m);
    data[2] = DEC2BCD(h);
    HAL_I2C_Mem_Write(&hi2c1, DS1307_ADDR, 0x00, 1, data, 3, 1000);
}
